    <script>
       document.getElementById('addToWishlistBtn').addEventListener('click', async function() {
    try {
        let productId = this.getAttribute('data-product-id');

        // Make AJAX request
        const response = await fetch(`/addwhishlist?id=${productId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ size: 'your_size_value_here' }) // Adjust size value accordingly
        });

        const result = await response.json();
        console.log(result); // Handle the response as needed

        if (result.success) {
            Swal.fire("Success!", "Product added to wishlist.", "success");
        } else if (result.message === "Product is already in the wishlist.") {
            Swal.fire("Info!", "Product is already in the wishlist.", "info");
        } else {
            Swal.fire("Error!", "Failed to add product to wishlist.", "error");
        }

    } catch (err) {
        console.error(err);
        Swal.fire("Error!", "Failed to add product to wishlist.", "error");
    }
});

    </script>

    <script>
        document.getElementById('addToCartForm').addEventListener('submit', async function(event) {
    event.preventDefault(); // Prevent form submission

    try {
        const productId = this.getAttribute('data-product-id');

        // Make AJAX request
        const response = await fetch(`/addCart?id=${productId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                quantity: document.getElementById('quantityInput').value, // Get quantity from input field
                size: 'your_size_value_here' // Adjust size value accordingly
            })
        });

        const result = await response.json();
        
        console.log(result); // Handle the response as needed

        if (result.success) {
            Swal.fire("Success!", "Product added to cart.", "success");
        } else if (result.message === "Product already in cart.") {
            Swal.fire("Info!", "Product is already in the cart.", "info");
        } else {
            Swal.fire("Error!", "Failed to add product to cart.", "error");
        }

    } catch (err) {
        console.error(err);
        Swal.fire("Error!", "Failed to add product to cart.", "error");
    }
});

    </script>
    

